{
  "includeCoAuthoredBy": false,
  "env": {
    "CLAUDE_CODE_DISABLE_TERMINAL_TITLE": "1"
  },
  "permissions": {
    "allow": [
      "Bash(bundle exec rspec:*)",
      "Bash(bundle exec rubocop)",
      "Bash(pnpm test:*)",
      "Bash(pnpm lint:*)",
      "Bash(gh pr view:*)"
    ],
    "deny": [
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Bash(rm:*)",
      "Bash(rm -rf)",
      "Bash(sudo:*)",
      "Bash(pnpm install:*)",
      "Bash(pnpm uninstall:*)",
      "Bach(curl:*)",
      "Read(.env.*)"
    ]
  }
}
